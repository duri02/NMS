# Gemini (Google AI Studio) — Gemini Developer API
GEMINI_API_KEY=PASTE_YOUR_KEY_HERE
GEMINI_CHAT_MODEL=gemini-2.0-flash
GEMINI_EMBED_MODEL=gemini-embedding-001
EMBED_DIM=768

# Pinecone
PINECONE_API_KEY=PASTE_YOUR_KEY_HERE
PINECONE_INDEX_NAME=natubot-index
# recomendado: pega el HOST del Index desde Pinecone Console (Index -> Host)
PINECONE_INDEX_HOST=
PINECONE_NAMESPACE=natubot

# Runtime / CORS
CORS_ALLOW_ORIGINS=*
DEFAULT_TOP_K=5
MAX_TOP_K=10

# Kiosk: Terms & Rate limiting
TERMS_VERSION=2026-01-13_v1
TERMS_FILE=terms_es.md
RATE_LIMIT_RPM=30
RATE_LIMIT_WINDOW_SEC=60

# Kiosk: Device registry + auth (recommended)
REQUIRE_KIOSK_AUTH=true
KIOSK_REGISTRY_FILE=kiosks.json

# Kiosk: UI config
BOT_NAME=NatuBot
OFFLINE_MESSAGE=Sin internet. Este servicio no funciona sin conexión.
MAX_MESSAGE_CHARS=4000

# Saludo inicial (configurable vía /config)
WELCOME_MESSAGE=Hola, soy NatuBot.\nEstoy aquí para ayudarte a conocer nuestros suplementos naturales.\n\n¿En qué puedo ayudarte hoy?
WELCOME_MESSAGE_VERSION=v1

# Logging
LOG_DIR=logs
LOG_LEVEL=INFO

# Speech pipeline (offline-first)
STT_MODE=local
TTS_MODE=silero
MODELS_DIR=models
VOSK_MODEL_PATH=models/vosk-es
AUDIO_SAMPLE_RATE=16000
VAD_ENABLED=true
VAD_AGGRESSIVENESS=2
VAD_FRAME_MS=30
VAD_END_SILENCE_MS=800

# Azure STT (optional when STT_MODE=azure)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=
AZURE_SPEECH_LANGUAGE=es-ES

# Silero TTS
SILERO_LANGUAGE=es
SILERO_SPEAKER=v3_es
TTS_CHUNK_CHARS=700

# Future cloud TTS placeholder
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
